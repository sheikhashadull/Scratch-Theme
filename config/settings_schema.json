                    },
                    {
                        "type": "color_background",
                        "id": "background_gradient",
                        "label": "Background Gradient"
                    },
                    {
                        "type": "color",
                        "id": "text",
                        "label": "Text",
                        "default": "#925212"
                    },
                    {
                        "type": "color",
                        "id": "button",
                        "label": "Button Background",
                        "default": "#F5eF9F"
                    },
                    {
                        "type": "color",
                        "id": "button_text",
                        "label": "Button Text",
                        "default": "#F5eF9F"
                    },
                    {
                        "type": "color",
                        "id": "stock_button",
                        "label": "Stock Button",
                        "default": "#12e95f"
                    },
                    {
                        "type": "color",
                        "id": "shadow",
                        "label": "Shadow ",
                        "default": "#121212"
                    }
                ],
                "role": {
                    "text": "text",
                    "background": {
                        "solid": "background",
                        "gradient": "background_gradient"
                    },
                    "links": "stock_button",
                    "icons": "text",
                    "primary_button": "button",
                    "on_primary_button": "button_text",
                    "primary_button_border": "button",
