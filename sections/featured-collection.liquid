<div class="featured-section">
  <div class="page-width">
    <div class="row col-{{ section.settings.col }}">
      {% for collection in collections %}
        <div class="col">
          <div class="featured-collection">
            {% if collection.image %}
              <img 
                src="{{ collection.image | image_url: width: 600 }}" 
                alt="{{ collection.title | escape }}"
                loading="lazy"
              >
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}

            <div class="card-details">
              <h3>{{ collection.title }}</h3>
              <p>{{ collection.description | strip_html | truncate: 100 }}</p>
              <a href="{{ collection.url }}">More Products</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
    .featured-section {
    padding: 80px 0;
    background: #f8f8f8;
}

.row {
    display: flex;
    flex-wrap: wrap;
    margin: -15px;
}

.col {
    padding: 15px;
}

/* Column Control */
.row.col-1 .col { width: 100%; }
.row.col-2 .col { width: 50%; }
.row.col-3 .col { width: 33.333%; }
.row.col-4 .col { width: 25%; }

/* Card */
.featured-collection {
    height: 100%;
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,.08);
    transition: all .4s ease;
}

.featured-collection:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0,0,0,.15);
}

.featured-collection img,
.placeholder-svg {
    width: 100%;
    height: 240px;
    object-fit: cover;
    display: block;
    background: #eaeaea;
}

.card-details {
    padding: 22px;
}

.card-details h3 {
    font-size: 22px;
    margin-bottom: 10px;
}

.card-details p {
    font-size: 14px;
    color: #555;
    margin-bottom: 18px;
}

.card-details a {
    display: inline-block;
    padding: 10px 22px;
    background: #111;
    color: #fff;
    border-radius: 30px;
    text-decoration: none;
    transition: .3s;
}

.card-details a:hover {
    background: #ff6a00;
}

/* Responsive */
@media (max-width: 768px) {
    .row.col-3 .col,
    .row.col-4 .col {
        width: 50%;
    }
}

@media (max-width: 480px) {
    .col {
        width: 100% !important;
    }
}

</style>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "range",
      "id": "col",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Column Number",
      "default": 3
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
