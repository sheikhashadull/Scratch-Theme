<section class="{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width">
        <h2>SPOTLIGHT</h2>
        <div class="featured-collection">
            {% for item in collections %}
                <div class="items">
                    {% if item.image.src %}
                        <img src="{{ item.image.src | image_url }}" alt="" width="auto" height="auto">
                    {% else %}
                        {{ 'collection-1' | placeholder_svg_tag }}
                    {% endif %}
                    <div class="item-title">
                        <h3>{{ item.title }}</h3>
                        <a href="{{ item.url }}">See More</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
.featured-collection {
    display: flex;
    gap: 24px;
    margin: 30px 0;
    width: 100%;
}

.items {
    width: 25%;
    background: #FCFBF7; /* gray background */
    padding: 16px;
    text-align: center;
    border-radius: 5px;
}

.items img,
.items svg {
    width: 100%;
    height: 360px;
    object-fit: cover;
    display: block;
    margin: 0 auto; /* image center */
    border-radius: 5px;

}

.item-title {
    margin-top: 16px;
}

.item-title h3 {
    font-size: 16px;
    margin-bottom: 6px;
}

.item-title a {
    font-size: 14px;
    text-decoration: none;
}

</style>

{% schema %}
{
    "name": "Featured Collection",
    "disabled_on": {"groups": ["header", "footer"]},
    "settings": [
        {
            "type": "collection",
            "id": "collection",
            "label": "Collections"
        }
    ],
    "presets": [
        {
            "name": "Featured Collection"
        }
    ]
}
{% endschema %}