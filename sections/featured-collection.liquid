<section class="">
    <div class="page-width">
        <h2>SPOTLIGHT</h2>
        <div class="featured-collection">
            {% for item in collections %}
                <div class="items">
                    {% if item.image.src %}
                        <img src="{{ item.image.src | image_url }}" alt="{{ item.title }}">
                    {% else %}
                        {{ 'collection-1' | placeholder_svg_tag }}
                    {% endif %}
                    <h3>{{ item.title }}</h3>
                    <a class="btn" href="{{ item.url }}">See more</a>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
.featured-collection {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: space-between;
}

/* Each item box */
.items {
    flex: 1 1 23%;
    background: #fff;
    border: 1px solid #e0e0e0;
    border-radius: 12px;
    overflow: hidden;
    text-align: center;
    padding: 15px;
    transition: transform 0.3s, box-shadow 0.3s;
}

/* Hover effect */
.items:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.08);
}

/* Images as square box */
.items img,
.items svg {
    width: 100%;
    aspect-ratio: 1/1; /* Perfect square */
    object-fit: contain; /* Full image visible */
    border-radius: 8px;
    background-color: #f9f9f9; /* optional, for placeholder look */
    margin-bottom: 15px;
}

/* Titles */
.items h3 {
    font-size: 1.1rem;
    margin-bottom: 10px;
    color: #222;
}

/* Button */
.btn {
    background-color: #f5c471;
    color: #222;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 6px;
    display: inline-block;
    transition: background-color 0.3s;
}

.btn:hover {
    background-color: #e0a850;
}

/* Responsive */
@media (max-width: 1024px) {
    .items {
        flex: 1 1 48%;
    }
}

@media (max-width: 600px) {
    .items {
        flex: 1 1 100%;
    }
}
</style>


{% schema %}
{
    "name": "Featured Collection",
    "disabled_on": {"groups": ["header", "footer"]},
    "settings": [],
    "presets": [
        {
            "name": "Featured Collection"
        }
    ]
}
{% endschema %}