<section class="featured-collection">
  <div class="page-width">
    <div class="section-header">
      <h2>Featured Collection</h2>
      <a href="#" class="view-all">View all</a>
    </div>

    <div class="collection-grid">
      {% for item in collections %}
      <div class="product-card">
        <a href="#">
          <div class="product-image">
            {% if item.image.src %}
            <img src="{{ item.image.src | image_url }}" alt="{{ item.title }}" width="auto" height="auto">
            <div class="image-overlay">
              <span class="quick-view">Quick View</span>
            </div>
            {% endif %}
          </div>
          <div class="product-info">
            <h3 class="product-title">{{ item.title }}</h3>
            <span class="product-price">{{ item.price }}</span>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
    {
        "name": "Featured Collection",
        "class": "featured_collection",
        "settings": [ ],
        "presets": [
            { 
                "name": "Featured Collection" 
            }
        ]
    }
{% endschema %}

<style>
.featured-collection {
  padding: 80px 0;
  background: #f9f9f9;
  font-family: 'Poppins', sans-serif;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40px;
}

.section-header h2 {
  font-size: 32px;
  font-weight: 700;
  color: #111;
}

.view-all {
  font-size: 14px;
  text-decoration: none;
  color: #111;
  border-bottom: 2px solid transparent;
  transition: all 0.3s ease;
}

.view-all:hover {
  border-bottom: 2px solid #ff6f61;
}

.collection-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
}

.product-card {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 8px 20px rgba(0,0,0,0.05);
  transition: transform 0.4s ease, box-shadow 0.4s ease;
  position: relative;
}

.product-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 25px rgba(0,0,0,0.1);
}

.product-image {
  position: relative;
  overflow: hidden;
  aspect-ratio: 1/1; /* Makes image container a perfect square */
  width: 100%;
}

.product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* Ensures image fills the square without distortion */
  display: block;
  transition: transform 0.5s ease;
}

.product-card:hover img {
  transform: scale(1.08);
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0) 60%, rgba(0,0,0,0.4) 100%);
  opacity: 0;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  transition: opacity 0.3s ease;
  padding-bottom: 15px;
}

.product-card:hover .image-overlay {
  opacity: 1;
}

.quick-view {
  color: #fff;
  font-size: 14px;
  font-weight: 500;
  background: #ff6f61;
  padding: 6px 14px;
  border-radius: 20px;
  cursor: pointer;
}

.product-info {
  padding: 15px;
  text-align: center;
}

.product-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 8px;
  color: #222;
}

.product-price {
  font-size: 14px;
  color: #888;
}

/* Responsive */
@media (max-width: 991px) {
  .collection-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 480px) {
  .collection-grid {
    grid-template-columns: 1fr;
  }
  .section-header h2 {
    font-size: 24px;
  }
}
</style>