<section class="">
    <div class="page-width">
        <div class="featured-collection">
            <h2>SPOTLIGHT</h2>
            <div class="collections">
                {% for item in collections %}
                    <div class="items">
                        {% if item.image.src %}
                            <img src="{{ item.image.src | image_url }}" alt="{{ item.title }}">
                        {% else %}
                            {{ 'collection-1' | placeholder_svg_tag }}
                        {% endif %}
                        <h3>{{ item.title }}</h3>
                        <a class="btn" href="{{ item.url }}">See more</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Featured Collection",
    "disabled_on": {"groups": ["header", "footer"]},
    "settings": [
        {
            "type": "collection_list",
            "id": "collection",
            "label": "Collections"
        }
    ],
    "presets": [
        {
            "name": "Featured Collection"
        }
    ]
}
{% endschema %}