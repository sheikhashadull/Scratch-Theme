<section class="{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width">
        <h2>SPOTLIGHT</h2>
        <div class="featured-collection">
  {% for item in collections %}
    <div class="items">
      <div class="item-image">
        {% if item.image %}
          <img src="{{ item.image | image_url: width: 800 }}" alt="{{ item.title }}">
        {% else %}
          {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>

      <div class="item-title">
        <h3>{{ item.title }}</h3>
        <a href="{{ item.url }}">See More</a>
      </div>
    </div>
  {% endfor %}
</div>

    </div>
</section>

<style>
.featured-collection {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 30px;
  margin-top: 30px;
}

.items {
  background: #fff;
  border-radius: 14px;
  overflow: hidden;
  transition: all 0.3s ease;
}

.items:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 30px rgba(0,0,0,0.12);
}

/* Image wrapper */
.item-image {
  width: 100%;
  aspect-ratio: 4 / 5; /* image & placeholder same height */
  background: #f5f5f5;
  overflow: hidden;
}

.item-image img,
.item-image svg {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Placeholder SVG fix */
.item-image svg {
  padding: 40px;
  fill: #ccc;
}

/* Title area */
.item-title {
  padding: 18px;
  text-align: center;
}

.item-title h3 {
  font-size: 18px;
  margin-bottom: 10px;
  font-weight: 600;
}

.item-title a {
  font-size: 14px;
  text-decoration: none;
  color: #000;
  border-bottom: 1px solid transparent;
  transition: border-color 0.3s;
}

.item-title a:hover {
  border-color: #000;
}

    
</style>

{% schema %}
{
    "name": "Featured Collection",
    "disabled_on": {"groups": ["header", "footer"]},
    "settings": [
        {
            "type": "collection",
            "id": "collection",
            "label": "Collections"
        }
    ],
    "presets": [
        {
            "name": "Featured Collection"
        }
    ]
}
{% endschema %}