<section class="featured-col {{ section.id }} color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width">
        <h2>{{ section.settings.featured-title }}</h2>
        <div class="featured-collection">
            {% for item in collections %}
                <div class="items">
                    {% if item.image.src %}
                        <img src="{{ item.image.src | image_url }}" alt="" width="auto" height="auto">
                    {% else %}
                        {{ 'collection-1' | placeholder_svg_tag }}
                    {% endif %}
                    <div class="item-title">
                        <h3>{{ item.title }}</h3>
                        <a href="{{ item.url }}" class="btn">See More</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
    .featured-col{
        padding: {{section.settings.featured-paddingx}}px 0;
    .featured-collection {
        display: flex;
        gap: 24px;
        margin: 30px 0;
        width: 100%;
    }

    .items {
        width: 25%;
        background:rgb(247, 247, 247); /* gray background */
        padding: 16px;
        text-align: center;
    }

    .items img,
    .items svg {
        width: 100%;
        height: 360px;
        object-fit: cover;
        display: block;
        margin: 0 auto; /* image center */
    }

    .item-title {
        margin-top: 16px;
    }

    .item-title h3 {
        margin: 15px 0px;
        font-size: 20px;
        text-align: left;
    }

    .item-title a {
        font-size: 16px;
        font-weight: 400;
    }

</style>

{% schema %}
{
    "name": "Featured Collection",
    "disabled_on": {"groups": ["header", "footer"]},
    "settings": [
        {
            "type": "text",
            "id": "featured-title",
            "label": "Title",
            "default": "Featured Collections"
        },
        {
            "type": "collection",
            "id": "collection",
            "label": "Collections",
        },
        {
            "type": "range",
            "id": "featured-paddingx",
            "label": "Footer Padding",
            "min": 10,
            "max": 120,
            "default": 10,
            "step": 10,
            "unit": "px"
        },
    ],
    "presets": [
        {
            "name": "Featured Collection"
        }
    ]
}
{% endschema %}