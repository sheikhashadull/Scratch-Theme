<style>
    .featured-collection {
    max-width: 320px;
    border-radius: 16px;
    overflow: hidden;
    background: #ffffff;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
}

.featured-collection:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
}

.featured-collection img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    display: block;
}

.card-details {
    padding: 20px;
}

.card-details h3 {
    font-size: 20px;
    font-weight: 600;
    color: #111;
    margin-bottom: 10px;
}

.card-details p {
    font-size: 14px;
    color: #555;
    line-height: 1.6;
    margin-bottom: 18px;
}

.card-details a {
    display: inline-block;
    font-size: 14px;
    font-weight: 500;
    color: #ffffff;
    background: #111;
    padding: 10px 18px;
    border-radius: 30px;
    text-decoration: none;
    transition: background 0.3s ease, transform 0.3s ease;
}

.card-details a:hover {
    background: #ff6a00;
    transform: translateX(4px);
}

</style>
