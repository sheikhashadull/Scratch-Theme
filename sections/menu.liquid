{% schema %}
{
  "name": "Menu",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Menu Title",
      "default": "Main Menu"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Menu Link",
      "default": "/collections/all"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    }
  ],
  "blocks": [
    {
      "type": "menu_item",
      "name": "Menu Item",
      "settings": [
        {
          "type": "text",
          "id": "item_title",
          "label": "Item Title",
          "default": "Home"
        },
        {
          "type": "url",
          "id": "item_link",
          "label": "Item Link",
          "default": "/"
        },
        {
          "type": "checkbox",
          "id": "open_in_new_tab",
          "label": "Open in new tab",
          "default": false
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Main Menu",
      "category": "Header"
    }
  ]
}

{% endschema %}