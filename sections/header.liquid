    "name": "Header Menu",
    "enabled_on": {
        "groups": ["header"]
    },
    "limit": 1,
    "settings": [
        {
            "type": "color",
            "id": "bgcolor",
            "label": "Background Color",
            "default": "#FFE9F6"
