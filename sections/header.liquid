<style>
    .header-top{
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: antiquewhite;
    width: 100%;
    height: 100px;
}
form{
    display: flex;
    gap: 20px;
    background-color: aquamarine;
    border-radius: 5px;
    margin-left: 20px;
    align-items: center;
    justify-content: space-between;
    width: 20%;
    padding: 10px 10px;
}
form svg{
    width: 30px;
    height: 30px;
}
form input{
    width: 100%;
    padding: 10px;
    background: none;
    outline: none;
    padding: 8px 12px;
    border: none;
    outline: none;
}
.accounts {
    display: flex;
    width: 20%;
    align-items: center;
    justify-content: end;
    gap: 10px;
}
.accounts svg {
    width: 30px;
    height: 30px;
}
nav{
    width: 100%;
}
nav ul{
    width: 100%;
    display: flex;
    gap: 10px;
    align-items: center;
    justify-content: center;
}
</style>
{% schema %}
    {
        "name": "Header",
        "class": "header_section",
        "settings": [
            {
                "type": "color_scheme",
                "id": "color_scheme",
                "label": "Color Scheme"
            }
        ]
    }
{% endschema %}