            "label": "Button Color",
            "default": "#FDE1EF"
        },
        {
            "type": "color",
            "id": "btntextcolor",
            "label": "Button Text Color",
            "default": "#ffffff"
        },
        {
            "type": "range",
            "id": "btnpaddingx",
            "label": "Button PaddingX",
            "default": 10,
            "unit": "px",
            "min": 0,
            "max": 120,
            "step": 2
        },
        {
            "type": "range",
            "id": "btnpaddingy",
            "label": "Button PaddingY",
            "default": 10,
            "unit": "px",
            "min": 0,
            "max": 120,
            "step": 2
        },
        {
            "type": "range",
            "id": "btnredius",
            "label": "Button Redius",
            "default": 10,
            "unit": "px",
            "min": 0,
            "max": 120,
            "step": 2
        }
    ],
    "presets": [
        {
            "name": "Header Menu"
        }
    ]
