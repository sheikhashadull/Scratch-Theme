{% liquid
  assign logo = section.settings.logo
  assign logowidth = section.settings.logowidth

  assign header_gap = section.settings.header-gap
  assign menu_gap = section.settings.menu-gap

  assign padding_headerx = section.settings.padding-headerx


  assign font_size = section.settings.font-size
  assign color = section.settings.color
  assign active_color = section.settings.active-color



  assign text_transform = section.settings.text-transform
%}


<section class=" header {{ section.id }} color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width">
        <div class="header-items">
            <div class="header-top">
            <form action="{{ routes.search_url }}">
                {% render 'icons', icon: 'search' %}
                <input class="search" type="search" placeholder="Search">
            </form>
            <div class="logo">
                {% if logo != blank %}
                    <img src="{{ logo | image_url }}" width="{{ logowidth }}" height="auto" alt="{{ shop.url }}">
                {% else %}
                    <span class="logo-text">{{ shop.name }}</span>
                {% endif %}
            </div>
            <div class="accounts">
                <a href=" {% if customer != blank %} {{ routes.account_url }} {% else %} {{ routes.account_login_url }} {% endif %}">{% render 'icons', icon: 'user' %}</a>
                <a href="/pages/wishlist">{% render 'icons', icon: 'wishlist' %}</a>
                <a href="{{ routes.a }}">{% render 'icons', icon: 'cart' %}</a>
            </div>
            </div>
            <nav>
                <ul>
                    {% for link in section.settings.menu.links %}
                    <li class="menu-item {% if link.links != blank %}has-dropdown{% endif %}">

                        <a class="{% if link.active %}active{% endif %}" href="{{ link.url }}">
                        {{ link.title }}
                        {% if link.links != blank %}
                            {% render 'icons', icon: 'downarrow' %}
                        {% endif %}
                        </a>

                        {% if link.links != blank %}
                        <div class="dropdown-menu">
                            <ul>
                            {% for childlink in link.links %}
                                <li class="{% if childlink.links != blank %}has-sub-dropdown{% endif %}">

                                <a href="{{ childlink.url }}">
                                    {{ childlink.title }}
                                    {% if childlink.links != blank %}
                                    {% render 'icons', icon: 'downarrow' %}
                                    {% endif %}
                                </a>

                                {% if childlink.links != blank %}
                                    <div class="sub-dropdown-menu">
                                    <ul>
                                        {% for subchild in childlink.links %}
                                        <li>
                                            <a href="{{ subchild.url }}">
                                            {{ subchild.title }}
                                            </a>
                                        </li>
                                        {% endfor %}
                                    </ul>
                                    </div>
                                {% endif %}

                                </li>
                            {% endfor %}
                            </ul>
                        </div>
                        {% endif %}

                    </li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </div>
</section>

<style>
.menu-item,
.has-sub-dropdown {
  position: relative;
}

/* level 1 dropdown */
.has-dropdown:hover > .dropdown-menu {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.dropdown-menu {
  position: absolute;
  top: 100%;
  left: 0;
  min-width: 220px;
  background: #fff;
  padding: 12px;
  border-radius: 8px;
  box-shadow: 0 12px 30px rgba(0,0,0,0.08);
  opacity: 0;
  visibility: hidden;
  transform: translateY(10px);
  transition: all 0.25s ease;
  z-index: 100;
}

/* level 2 dropdown */
.has-sub-dropdown:hover > .sub-dropdown-menu {
  opacity: 1;
  visibility: visible;
  transform: translateX(0);
}

.sub-dropdown-menu {
  position: absolute;
  top: 0;
  left: 100%;
  min-width: 200px;
  background: #fff;
  padding: 12px;
  border-radius: 8px;
  box-shadow: 0 12px 30px rgba(0,0,0,0.08);
  opacity: 0;
  visibility: hidden;
  transform: translateX(10px);
  transition: all 0.25s ease;
  z-index: 110;
}

.dropdown-menu ul,
.sub-dropdown-menu ul {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.dropdown-menu a,
.sub-dropdown-menu a {
  font-size: 14px;
  font-weight: 500;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.dropdown-menu a:hover,
.sub-dropdown-menu a:hover {
  color: {{ active_color }};
}


.dropdown-menu ul {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.dropdown-menu a {
  color: #333;
  font-size: 14px;
  font-weight: 500;
}

.dropdown-menu a:hover {
  color: {{ active_color }};
}


.dropdown-menu {
    position: absolute;
    top: 25px;
}
.dropdown-menu ul{
    display: flex;
    flex-direction: column;
    gap: 12px;
    background: gray;
    padding: 10px;
    width: auto;
    align-items: flex-start;
    border-radius: 5px;
}
.header {
    padding: {{ padding_headerx }}px 0;
}
.header-items {
    display: flex;
    flex-direction: column;
    gap: {{ header_gap }}px;
}

.header-top{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}
form{
    display: flex;
    background-color: #F2EFE7;
    align-items: center;
    justify-content: space-between;
    width: 20%;
    padding: 4px 8px;
}
form svg{
    width: 25px;
}
form input{
    width: 100%;
    padding: 10px;
    background: none;
    outline: none;
    border: none;
    outline: none;
}
.logo {
    display: flex;
    align-content: center;
    justify-content: center;
}
.accounts {
    display: flex;
    width: 20%;
    align-items: center;
    justify-content: end;
    gap: 10px;
}
.accounts svg {
    width: 25px;
}
nav{
    width: 100%;
    position: relative;
}
nav ul{
    width: 100%;
    display: flex;
    gap: {{ menu_gap }}px;
    align-items: center;
    justify-content: center;
    font-size:{{ font_size }}px;
}
nav ul li a{
    color: {{ color }};
    text-transform: {{ text_transform }};
    font-weight: 600;
}
nav ul li a.active {
  color: {{ active_color }};
}
nav ul li a svg {
  width: 15px;
}
</style>

{% schema %}
    {
        "name": "Header",
        "class": "header_section",
        "settings": [
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Logo"
            },
            {
                "type": "range",
                "id": "logowidth",
                "label": "Logo Width",
                "min": 50,
                "max": 120,
                "default": 50,
                "step": 10,
                "unit": "px"
            },
            {
                "type": "link_list",
                "id": "menu",
                "label": "Menu"
            },
            {
                "type": "range",
                "id": "padding-headerx",
                "label": "Header Padding",
                "min": 10,
                "max": 120,
                "default": 10,
                "step": 10,
                "unit": "px"
            },
            {
                "type": "range",
                "id": "header-gap",
                "label": "Header Gap",
                "min": 10,
                "max": 120,
                "default": 10,
                "step": 10,
                "unit": "px"
            },
            {
                "type": "header",
                "content": "Menu Style"
            },
            {
                "type": "color",
                "id": "color",
                "label": "Color",
                "default": "#333333"
            },
            {
                "type": "color",
                "id": "active-color",
                "label": "Active Color",
                "default": "#333333"
            },
            {
                "type": "select",
                "id": "text-transform",
                "label": "Text Transfont",
                "default": "capitalize",
                "options": [
                    {"value": "lowercase", "label": "Lowercase"},
                    {"value": "capitalize", "label": "Capitalize"},
                    {"value": "uppercase", "label": "Uppercase"}
                ]
            },
            {
                "type": "range",
                "id": "font-size",
                "label": "Font Size",
                "min": 16,
                "max": 20,
                "default": 16,
                "step": 2,
                "unit": "px"
            },
            {
                "type": "range",
                "id": "menu-gap",
                "label": "Gap",
                "min": 10,
                "max": 120,
                "default": 10,
                "step": 10,
                "unit": "px"
            },
            {
                "type": "header",
                "content": "Section Style"
            },
            {
                "type": "color_scheme",
                "id": "color_scheme",
                "label": "Color Scheme"
            },
        ]
    }
{% endschema %}