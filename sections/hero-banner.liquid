{% style %}
.custom-hero-{{ section.id }} {
  background-color: {{ section.settings.bgcolor }};
  padding: {{ section.settings.padding }}px;
}

.custom-hero-{{ section.id }} .hero-wrapper {
  max-width: 1200px;
  margin: 0 auto;
  text-align: center;
}

.custom-hero-{{ section.id }} h1 {
  font-size: 48px;
  margin-bottom: 16px;
}

.custom-hero-{{ section.id }} p {
  font-size: 18px;
  margin-bottom: 24px;
}

.custom-hero-{{ section.id }} .hero-btn {
  display: inline-block;
  background-color: {{ section.settings.btncolor }};
  color: {{ section.settings.btntextcolor }};
  padding: {{ section.settings.btnpaddingy }}px {{ section.settings.btnpaddingx }}px;
  border-radius: {{ section.settings.btnradius }}px;
  text-decoration: none;
  font-weight: 600;
}
{% endstyle %}

<section class="custom-hero-{{ section.id }}">
  <div class="hero-wrapper">
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}

    {% if section.settings.btntext != blank %}
      <a href="{{ section.settings.btnlink }}" class="hero-btn">
        {{ section.settings.btntext }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Hero Heading"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Describe your product or offer in one clear sentence."
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color",
      "default": "#FFE9F6"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Section Padding",
      "min": 20,
      "max": 160,
      "step": 4,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "btntext",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "btnlink",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "btncolor",
      "label": "Button Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "btntextcolor",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "btnpaddingx",
      "label": "Button Padding X",
      "min": 8,
      "max": 60,
      "step": 2,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "btnpaddingy",
      "label": "Button Padding Y",
      "min": 8,
      "max": 40,
      "step": 2,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "btnradius",
      "label": "Button Radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "default": 8,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Custom Hero"
    }
  ]
}
{% endschema %}
