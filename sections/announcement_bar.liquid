<div class="{{ section.id }} announcement">
    <div class="container">
        {% content_for 'blocks' %}
    </div>
</div>

{% liquid
  assign bg_color = section.settings.bg_color
  assign text_color = section.settings.text_color

  assign padding = section.settings.padding
%}


{% style %}
  .announcement {
    background-color: {{ bg_color }};
    padding: {{ padding }}px 0;
  }
  .{{ section.id }} p{
    color: {{ text_color }};
  }
{% endstyle %}

{% schema %}
    {
        "name": "Announcement Bar",
        "enabled_on": {
            "groups": ["header"]
        },
        "limit": 1,
        "settings": [
            {
                "type": "color",
                "id": "bg_color",
                "label": "Backgound Color",
            },
            {
                "type": "color",
                "id": "text_color",
                "label": "Text Color",
            },
            {
                "type": "range",
                "id": "padding",
                "label": "Padding",
                "default": 10,
                "unit": "px",
                "min": 0,
                "max": 120,
                "step": 2
            },

        ],
        "blocks": [
            {
                "type": "@theme"
            }
        ],
        "presets": [
            {
                "name": "Announcement Bar"
            }
        ]
    }
{% endschema %}
