{% liquid
  assign padding_footerx = section.settings.padding-footerx
  assign footerlinks = section.settings.footerlinks
%}
<section class="footer {{ section.id }} color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width">
        <div class="footer-content">
            <div class="info">
                <h3>GET 10% OFF YOUR FIRST ORDER WHEN SIGNING UP TO OUR NEWSLETTER</h3>
                {% form 'customer', class: 'newsletter' %}
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    <input type="email" placeholder="Email" name="contact[email]" required>
                    <button type="submit" aria-label="Subscribe" class="newsletter-btn">
                        {% render 'icons', icon: 'rightarrow' %}
                    </button>
                {% endform %}
            </div>

            <div class="links">
                {% for i in (1..4) %}
                    <div class="link">
                        <h5>Information</h5>
                        <ul>
                            {% for link in footerlinks.links %}
                                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endfor %}
            </div>
        </div>
        <span></span>
        <div class="copyright">
                {{ section.settings.copyright | default: 'Kick Game Limited | Company No. 08761997 VAT No. GB179081090' }}
            <div class="payment-icons">
                {{ 'visa' | payment_type_svg_tag }}
                {{ 'master' | payment_type_svg_tag }}
                {{ 'american_express' | payment_type_svg_tag }}
                {{ 'paypal' | payment_type_svg_tag }}
                {{ 'apple_pay' | payment_type_svg_tag }}
                {{ 'google_pay' | payment_type_svg_tag }}
                {{ 'shop_pay' | payment_type_svg_tag }}
            </div>
        </div>
        
    </div>
</section>

<style>
    .newsletter {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        border: 1px solid #47474796;
    }
    .newsletter-btn {
        background: none;
        border: 0;
        cursor: pointer;
    }
    .footer {
        padding: {{ padding_footerx }}px 0;
    }
    .footer-content{
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 76px;
        width: 100%;
        margin-bottom: 20px;
    }
    .info{
        width: 30%;
        display: flex;
        flex-direction: column;
    }
    .info h3 {
        font-size: 28px;
        width: 80%;
        line-height: 32px;
        font-weight: 700;
        margin-bottom: 20px;
    }
    .links{
        width: 70%;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .link h5 {
        font-size: 16px;
        text-transform: uppercase;
        margin-bottom: 10px;
    }
    .link {}

    .link ul li {
        padding: 6px 0;
        font-size: 16px;
    }
    .link ul li a {
        color: #121212;
    }
    .copyright{
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 10px;
        border-top: 1px solid rgba(177, 177, 177, 0.44);
    }
    .payment-icons {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }
    .payment-icons svg {
        height: 26px;
        width: auto;
        opacity: 0.85;
    }
</style>


{% schema %}
    {
        "name": "Footer",
        "class": "footer_section",
        "enabled_on": {
            "groups": ["footer"]
        },
        "settings": [
            {
                "type": "link_list",
                "id": "footerlinks",
                "label": "Important Links"
            },
            {
                "type": "range",
                "id": "padding-footerx",
                "label": "Footer Padding",
                "min": 10,
                "max": 120,
                "default": 10,
                "step": 10,
                "unit": "px"
            },
            {
                "type": "richtext",
                "id": "copyright",
                "label": "Copyright Text",
                "default": "<p>Kick Game Limited | Company No. 08761997 VAT No. GB179081090</p>"
            },
            {
                "type": "header",
                "content": "Footer Style"
            },
            {
                "type": "color_scheme",
                "id": "color_scheme",
                "label": "Color Scheme"
            },
        ],
        "blocks": [
            {
                "type": "@theme"
            }
        ]
    }
{% endschema %}