{% liquid
    assign current_variant = product.selected_or_first_available_variant
    assign featured_media = current_variant.featured_media | default: product.featured_media

%}
<section class="product-section">
  <div class="page-width">
    <div class="product-wraper">
        <div class="product-left">
            <div class="main-image">
                <img src="{{ featured_media | image_url }}" alt="" width="auto" height="auto" id="productimage">
            </div>
            <div class="thumbs">
                {% for image in product.images %}
                    <img src="{{ image | image_url }}" alt="" width="auto" height="auto"
                        onclick="document.getElementById('productimage').src=this.src"
                    >
                {% endfor %}
            </div>
        </div>
        <div class="product-right">
            <h1>{{ product.title }}</h1>
            
            <div class="price">
                <span class="sale-price">{{ product.price | money }}</span>
                <span class="regular-price">{{ product.compare_at_price | money }}</span>
            </div>
            <p class="description"> {{ product.description }}</p>

            {% if product.variants.size > 1 %}
                <select class="variant-select">
                    {% for variant in product.variants %}
                        <option value="{{ variant.id }}">
                            {{ variant.title }}
                        </option>
                    {% endfor %}
                </select>
            {% endif %}

            <div class="product-form">
                {% form 'product', product %}
                    <input type="hidden" name="id" value="{{ current_variant.id }}">
                    <input type="number" name="quantity" id="quantity" min="1" max="10" value="1">
                    <input type="submit" value="Add to Cart">
                    <span>{{ form | payment_button }}</span>
                {% endform %}
            </div>
        </div>
    </div>
  </div>
</section>

<style>
    /* ===============================
   PRODUCT PAGE – MODERN & CLEAN
================================ */
.product-section {
  padding: 48px 0;
}

/* GRID */
.product-wraper {
  display: grid;
  grid-template-columns: 1.1fr 1fr;
  gap: 48px;
  align-items: flex-start;
}

/* ===============================
   LEFT SIDE – IMAGE
================================ */
.product-left {
  width: 100%;
}

/* Main Image */
.main-image {
  width: 100%;
  max-width: 460px;   /* size control */
  margin: 0 auto;
  aspect-ratio: 1 / 1;
  border-radius: 16px;
  overflow: hidden;
  background: #f3f3f3;
}

.main-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.35s ease;
}

.main-image:hover img {
  transform: scale(1.04);
}

/* Thumbnails */
.thumbs {
  display: flex;
  gap: 12px;
  justify-content: center;
  margin-top: 16px;
}

.thumbs img {
  width: 64px;
  height: 64px;
  object-fit: cover;
  border-radius: 10px;
  cursor: pointer;
  border: 1px solid #ddd;
  transition: all 0.25s ease;
}

.thumbs img:hover {
  border-color: #000;
  transform: translateY(-2px);
}

/* ===============================
   RIGHT SIDE – CONTENT
================================ */
.product-right {
  max-width: 520px;
}

/* Title */
.product-right h1 {
  font-size: 30px;
  font-weight: 600;
  margin-bottom: 14px;
  line-height: 1.3;
}

/* Price */
.price {
  display: flex;
  gap: 14px;
  align-items: center;
  margin-bottom: 18px;
}

.sale-price {
  font-size: 24px;
  font-weight: 600;
  color: #111;
}

.regular-price {
  font-size: 16px;
  color: #888;
  text-decoration: line-through;
}

/* Description */
.description {
  font-size: 15px;
  line-height: 1.75;
  color: #555;
  margin-bottom: 22px;
}

/* ===============================
   VARIANT SELECT
================================ */
.variant-select {
  width: 100%;
  padding: 14px;
  border-radius: 12px;
  border: 1px solid #ccc;
  font-size: 15px;
  margin-bottom: 22px;
  background: #fff;
}

/* ===============================
   PRODUCT FORM
================================ */
.product-form {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

/* Quantity */
.product-form input[type="number"] {
  width: 140px;
  padding: 12px;
  border-radius: 10px;
  border: 1px solid #ccc;
  font-size: 15px;
}

/* Add to Cart */
.product-form input[type="submit"] {
  padding: 16px;
  background: #111;
  color: #fff;
  border: none;
  border-radius: 14px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.3s ease, transform 0.2s ease;
}

.product-form input[type="submit"]:hover {
  background: #000;
  transform: translateY(-1px);
}

/* Payment button spacing */
.product-form span {
  margin-top: 6px;
}

/* ===============================
   MOBILE RESPONSIVE
================================ */
@media (max-width: 992px) {
  .product-wraper {
    grid-template-columns: 1fr;
    gap: 32px;
  }

  .product-right {
    max-width: 100%;
  }

  .product-right h1 {
    font-size: 24px;
  }
}

@media (max-width: 576px) {
  .main-image {
    max-width: 100%;
    border-radius: 14px;
  }

  .thumbs {
    gap: 10px;
  }

  .thumbs img {
    width: 56px;
    height: 56px;
  }

  .sale-price {
    font-size: 22px;
  }

  .product-form input[type="number"] {
    width: 100%;
  }
}

    
</style>



{% schema %}
{
    "name": "All Products",
    "disabled_on": {"groups": ["header", "footer"]},
    "settings": [
        {
            "type": "text",
            "id": "featured-title",
            "label": "Title",
            "default": "Featured Collections"
        },
        {
            "type": "collection_list",
            "id": "collection_list",
            "label": "Featured Collections",
        },
        {
            "type": "range",
            "id": "featured-paddingx",
            "label": "Footer Padding",
            "min": 10,
            "max": 120,
            "default": 10,
            "step": 10,
            "unit": "px"
        },
    ],
    "presets": [
        {
            "name": "All Products"
        }
    ]
}
{% endschema %}