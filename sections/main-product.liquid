<div class="main-product-section">
  <div class="page-width">
    <div class="row">
      <div class="col-lg-6">
        <div class="product-left">
          <img src="your-image-source.jpg" alt="Product Image">
        </div>
      </div>
      <div class="col-lg-6">
        <div class="product-right">
          <h3>Product Title</h3>
          <div>
            <span>Price: $100.00</span>
            <s>Sale Price: $80.00</s>
          </div>
          <p>This is a detailed description of the product. It highlights its features, benefits, and any other relevant information that a customer might need before making a purchase.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
    .main-product-section {
  padding: 60px 0;
}

.product-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 50px;
}

.product-left img {
  width: 100%;
  border-radius: 12px;
}

.product-title {
  font-size: 28px;
  margin-bottom: 15px;
}

.product-price {
  margin-bottom: 20px;
  font-size: 20px;
}

.sale-price {
  color: #e53935;
  font-weight: 600;
  margin-right: 10px;
}

.compare-price {
  color: #999;
}

.product-description {
  margin-bottom: 25px;
  line-height: 1.7;
}

.add-to-cart {
  background: #000;
  color: #fff;
  padding: 14px 30px;
  border: none;
  cursor: pointer;
  font-size: 16px;
}

.add-to-cart:hover {
  opacity: 0.9;
}

/* Mobile */
@media (max-width: 768px) {
  .product-grid {
    grid-template-columns: 1fr;
  }
}

</style>


{% schema %}
    {
    "name": "Main Product",
    "class": "main_product",
    "settings": [
    ],
    "presets": [
        {
        "name": "Main Product"
        }
    ]
    }
{% endschema %}