<div class="main-product-section">
  <div class="page-width">
    <div class="row">
      <div class="col-lg-6">
        <div class="product-left">
          <img src="your-image-source.jpg" alt="Product Image" width="auto" height="auto">
        </div>
      </div>
      <div class="col-lg-6">
        <div class="product-right">
            <h3>Product Title</h3>
            <div>
                <span>Price: $100.00</span>
                <s>Sale Price: $80.00</s>
            </div>
            <p>This is a detailed description of the product. It highlights its features, benefits, and any other relevant information that a customer might need before making a purchase.</p>
        </div>
        <div class="product-form">
            {% form 'product' product %}
              <input type="submit" value="Add to Cart">
            {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Row */
.row {
  display: flex;
  gap: 40px;
  align-items: center;
}

/* Columns */
.col-lg-6 {
  width: 50%;
}

/* Image */
.product-left img {
  width: 100%;
  border-radius: 10px;
}

/* Right content */
.product-right h3 {
  font-size: 26px;
  margin-bottom: 15px;
}

.price-wrap {
  margin-bottom: 15px;
  font-size: 20px;
}

.price {
  color: #000;
  font-weight: 600;
  margin-right: 10px;
}

.sale-price {
  color: #999;
}

.product-right p {
  line-height: 1.6;
  color: #444;
}

/* Mobile */
@media (max-width: 768px) {
  .row {
    flex-direction: column;
  }

  .col-lg-6 {
    width: 100%;
  }

  .product-right {
    text-align: center;
  }
}

</style>


{% schema %}
    {
    "name": "Main Product",
    "class": "main_product",
    "settings": [
    ],
    "presets": [
        {
        "name": "Main Product"
        }
    ]
    }
{% endschema %}