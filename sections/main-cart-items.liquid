{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}

<div class="page-width">
     <h1 class="cart-title">Your Cart</h1>
    {% if cart != blank %}
    {% for item in cart.items %}
        <div class="cart-item">
            <img src="{{ featured_image| image_url }}" alt="{{ product.title }}" width="auto" height="auto">
            
            <div class="cart-details">
            <h3>{{ item.product.title }}</h3>
            <p>Small / Black</p>
            </div>

            <div class="cart-price">{{ item.original_price | money }}</div>

            <div class="cart-qty">
            <input type="number" value="{{ item.quantity }}">
            </div>

            <div class="remove">Remove</div>
              <!-- Cart Summary -->
            <div class="cart-summary">
                <h2>{{ item.original_line_price | money }}</h2>
                <button class="checkout-btn">{{ form | payment_button }}</button>
            </div>
        </div>
    {% endfor %}
  {% else %}
    cart is empty
{% endif %}

</div>

<div class="cart-container">
 

  <!-- Cart Item -->
  <div class="cart-item">
    <img src="https://via.placeholder.com/100" alt="Product">
    
    <div class="cart-details">
      <h3>{{ product.title }}</h3>
      <p>Small / Black</p>
    </div>

    <div class="cart-price">{{ cart.items.product.price | money }}</div>

    <div class="cart-qty">
      <input type="number" value="1">
    </div>

    <div class="remove">Remove</div>
  </div>

  <!-- Cart Summary -->
  <div class="cart-summary">
    <h2>Total: $49.00</h2>
    <button class="checkout-btn">Proceed to Checkout</button>
  </div>
</div>

<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Arial, sans-serif;
}

body {
  background: #f5f5f5;
}

.cart-container {
  max-width: 900px;
  margin: 50px auto;
  background: #fff;
  padding: 30px;
  border-radius: 8px;
}

.cart-title {
  font-size: 24px;
  margin-bottom: 20px;
}

.cart-item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding: 20px 0;
}

.cart-item img {
  width: 100px;
  border-radius: 6px;
}

.cart-details {
  flex: 1;
  padding-left: 20px;
}

.cart-details h3 {
  font-size: 18px;
  margin-bottom: 8px;
}

.cart-details p {
  color: #666;
  font-size: 14px;
}

.cart-price {
  width: 100px;
  font-weight: bold;
}

.cart-qty input {
  width: 50px;
  padding: 5px;
  text-align: center;
}

.remove {
  color: red;
  cursor: pointer;
  font-size: 14px;
}

.cart-summary {
  margin-top: 30px;
  text-align: right;
}

.cart-summary h2 {
  margin-bottom: 10px;
}

.checkout-btn {
  background: #000;
  color: #fff;
  border: none;
  padding: 12px 25px;
  cursor: pointer;
  border-radius: 4px;
}
</style>

