<section class="featured-col {{ section.id }} color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width">
        <h2>{{ section.settings.featured-title }}</h2>
        <div class="featured-collection">
            <div class="items">
                <img src="{{ item.image.src | image_url }}" alt="" width="auto" height="auto">
                <div class="item-title">
                    <div class="badge">
                        <span class="instock">Sale</span>
                        <span class="stockout">Sold</span>
                    </div>
                    <h3>{{ item.title }}</h3>
                    <div class="price">
                        <span class="sale-price"></span>
                        <span class="regular-price"></span>
                    </div>
                    <a href="{{ item.url }}" class="btn">See More</a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .featured-col {
        padding: {{section.settings.pro-paddingx}}px 0;
    }
    .featured-collection {
        display: flex;
        gap: 24px;
        margin: 30px 0;
        width: 100%;
    }

    .items {
        position: relative;
        width: 25%;
        background:rgb(247, 247, 247); /* gray background */
        padding: 16px;
        text-align: center;
    }

    .items img,
    .items svg {
        width: 100%;
        height: 360px;
        object-fit: cover;
        display: block;
        margin: 0 auto; /* image center */
    }

    .item-title {
        margin-top: 16px;
    }

    .item-title h3 {
        margin: 15px 0px;
        font-size: 20px;
        text-align: left;
    }

    .item-title a {
        font-size: 16px;
        font-weight: 400;
    }
    .badge {
        display: flex;
        gap: 8px;
        margin-bottom: 10px;
        position: absolute;
        top: 30px;
        right: 30px;
    }

    .badge span {
        font-size: 12px;
        font-weight: 600;
        padding: 4px 10px;
        border-radius: 3px;
        line-height: 1;
    }

    /* Sale badge */
    .badge .instock {
        background:rgb(12, 165, 71);
        color: #ffffff;
    }

    /* Sold out badge */
    .badge .stockout {
        background:rgb(207, 18, 18);
        color: #ffffff;
    }
</style>

{% schema %}
{
    "name": "Featured Product",
    "disabled_on": {"groups": ["header", "footer"]},
    "settings": [
        {
            "type": "text",
            "id": "featured-title",
            "label": "Title",
            "default": "Featured Collections"
        },
        {
            "type": "collection",
            "id": "collection",
            "label": "Collections",
        },
        {
            "type": "range",
            "id": "pro-paddingx",
            "label": "PaddingX",
            "min": 10,
            "max": 120,
            "default": 10,
            "step": 10,
            "unit": "px"
        },
    ],
    "presets": [
        {
            "name": "Featured Product"
        }
    ]
}
{% endschema %}