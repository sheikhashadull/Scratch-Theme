<div class="featured-collection-product">
  <div class="page-width">
    <h2 class="section-heading">Featured Products</h2>

    <div class="product-row">
      {% for product in collection.products %}
        <div class="col-4">
          <div class="product-card">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | image_url: width: 500 }}" alt="{{ product.title }}">
            {% endif %}

            <div class="product-info">
              <h3>{{ product.title }}</h3>
              <span class="price">{{ product.price | money_with_currency }}</span>
              <p>{{ product.description | strip_html | truncate: 80 }}</p>
              <a href="{{ product.url }}" class="btn">View Product</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
    .featured-collection-product {
  padding: 80px 0;
  background: #f7f7f7;
}

.page-width {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.section-heading {
  text-align: center;
  font-size: 32px;
  margin-bottom: 40px;
}

/* Grid */
.product-row {
  display: flex;
  flex-wrap: wrap;
  margin: -15px;
}

.col-4 {
  width: 25%;
  padding: 15px;
}

/* Card */
.product-card {
  background: #fff;
  border-radius: 14px;
  overflow: hidden;
  box-shadow: 0 8px 25px rgba(0,0,0,.08);
  transition: .4s;
}

.product-card:hover {
  transform: translateY(-8px);
}

/* Image */
.product-card img {
  width: 100%;
  height: 260px;
  object-fit: cover;
}

/* Info */
.product-info {
  padding: 20px;
  text-align: center;
}

.product-info h3 {
  font-size: 18px;
  margin-bottom: 8px;
}

.price {
  display: block;
  font-weight: 600;
  margin-bottom: 10px;
}

.product-info p {
  font-size: 14px;
  color: #555;
  margin-bottom: 15px;
}

/* Button */
.btn {
  padding: 10px 24px;
  background: #111;
  color: #fff;
  border-radius: 30px;
  text-decoration: none;
  display: inline-block;
}

/* Responsive */
@media (max-width: 992px) {
  .col-4 { width: 50%; }
}

@media (max-width: 480px) {
  .col-4 { width: 100%; }
}

</style>


{% schema %}
    {
    "name": "FC Product",
    "class": "fc_product",
    "settings": [
    ],
    "presets": [
        {
        "name": "Featured Collection Product"
        }
    ]
    }
{% endschema %}