<div class="featured-collection-product">
  <div class="page-width">
    <div class="row">
      <div class="col-12">
        <h1>Featured collection product</h1>
      </div>
    </div>
    <div class="row">
        {% paginate section.settings.collection.products by 3 %}
            {% if section.settings.collection.products.size > 0 %}
                {% render 'product-card', product: product %}
            {% else %}
                No Product Found
            {% endif %}
            <div>
                {{ paginate | default_pagination }}
            </div>
        {% endpaginate %}
    
    </div>
  </div>
</div>

<style>
    /* Section */
.featured-collection-product {
  padding: 80px 0;
  background: #f7f7f7;
}

/* Layout */
.page-width {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.row {
  display: flex;
  flex-wrap: wrap;
  margin: -15px;
}

.col-12 {
  width: 100%;
  padding: 15px;
  text-align: center;
}

.col-lg-4 {
  width: 33.333%;
  padding: 15px;
}

/* Heading */
.featured-collection-product h1 {
  font-size: 36px;
  margin-bottom: 40px;
}

/* Card */
.card {
  width: 100% !important;
  background: #fff;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0,0,0,.08);
  transition: transform .4s ease, box-shadow .4s ease;
}

.card:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 40px rgba(0,0,0,.15);
}

/* Image */
.card-img-top {
  width: 100%;
  height: 260px;
  object-fit: cover;
  display: block;
  background: #eaeaea;
}

/* Card Body */
.card-body {
  padding: 20px;
  position: relative;
  text-align: center;
}

/* Badges */
.card-badge {
  position: absolute;
  top: 15px;
  left: 15px;
  display: flex;
  gap: 8px;
}

.badge {
  font-size: 12px;
  padding: 6px 12px;
  border-radius: 30px;
  color: #fff;
}

.text-bg-success {
  background: #28a745;
}

.text-bg-danger {
  background: #dc3545;
}

/* Title */
.card-title {
  font-size: 18px;
  margin: 30px 0 10px;
}

/* Price */
.price {
  margin-bottom: 15px;
}

.sale-price {
  font-weight: 600;
  margin-right: 8px;
}

.sale-regular {
  color: #888;
  text-decoration: line-through;
  font-size: 14px;
}

/* Button */
.btn {
  display: inline-block;
  padding: 10px 24px;
  background: #111;
  color: #fff;
  border-radius: 30px;
  text-decoration: none;
  transition: background .3s ease;
}

.btn:hover {
  background: #ff6a00;
}

/* Responsive */
@media (max-width: 992px) {
  .col-lg-4 {
    width: 50%;
  }
}

@media (max-width: 480px) {
  .col-lg-4 {
    width: 100%;
  }

  .featured-collection-product h1 {
    font-size: 28px;
  }
}

</style>


{% schema %}
    {
    "name": "FC Product",
    "class": "fc_product",
    "settings": [
        {
            "type": "collection",
            "id": "collection",
            "label": "All Collection",
            "info": "Select Your Collections"
        },
    ],
    "presets": [
        {
        "name": "Featured Collection Product"
        }
    ]
    }
{% endschema %}